\newcommand\name[1]{%
  \if@inopening%
    \null\par%
    \strut\smash{\@namefont #1}\par%
  \else%
    \@errNOO%
  \fi%
}
\newcommand\desc[1]{%
  \if@inopening%
    \null\par%
    \strut\smash{\@descfont #1}\par%
  \else%
    \@errNOO%
  \fi%
}
\newcommand\icon[1]{% %%%%%
  \if@inopening%
    \null\par\strut\smash{\@namefont #1}\strut\par%
  \else%
    \@errNOO%
  \fi%
}
