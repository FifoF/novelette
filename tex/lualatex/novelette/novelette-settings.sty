%% MODE AND INTENT
\newcommand\mode[1]{ % How to structure the PDF.
  \StrDel{#1}{ }[\nvt@temp@s]
  \IfSubStr{:draft:shade:align:final:}{\nvt@temp@s}{
    \xdef\nvt@mode{\nvt@temp@s}
  }{
    \ClassError{novelette}{Bad value for \string\mode.^^J%
      Choose: draft shade align final^^J%
      \nvt@XN}{\nvt@RXN}\nvt@bad
  }
}
\@onlypreamble\mode
