%% SHEETFEED (Normally not used. See Novelette documentation.)
\newcommand\sheetfeed[1]{
  \nvt@okfalse
  \StrDel{#1}{ }[\nvt@temp@s]
  \ifthenelse{\equal{\nvt@temp@s}{trimsize}}{
    \nvt@oktrue
    \global\deflength\pagewidth{\nvt@trimw}
    \global\deflength\pageheight{\nvt@trimh}
  }{}
  \ifthenelse{\equal{\nvt@temp@s}{letter}}{
    \nvt@oktrue
    \global\deflength\pagewidth{8.5in}
    \global\deflength\pageheight{11in}
  }{}
  \ifthenelse{\equal{\nvt@temp@s}{a4} \OR \equal{\nvt@temp@s}{A4}}{
    \nvt@oktrue
    \global\deflength\pagewidth{210mm}
    \global\deflength\pageheight{297mm}
  }{}
  \ifnvt@ok\else\nvt@errBVSF\fi % Bad value sheetfeed.
  \xdef\log@sheetfeed{\string\sheetfeed{#1}}
}
\sheetfeed{trimsize} % Default.
\@onlypreamble\sheetfeed
