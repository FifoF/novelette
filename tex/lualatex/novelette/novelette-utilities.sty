%% FRONTMATTER, MAINMATTER, BACKMATTER
% These commands can only be used in document body:
\def\frontmatter{%
  \ifnvt@frontmatter%
    \ClassError{novelette}{Duplicate \string\frontmatter.^^J%
      \nvt@XN}{\nvt@RXN}\nvt@bad%
  \fi% Bad matter command.
  \ifnvt@mainmatter%
    \ClassError{novelette}{No more frontmatter after mainmatter.^^J%
      \nvt@XN}{\nvt@RXN}\nvt@bad%
  \fi%
  \global\nvt@frontmattertrue%
  \global\nvt@mainmatterfalse%
  \clearpage%
  \versohead{}%
  \rectohead{}%
  \pagenumbering{roman}%
  \setcounter{page}{1}%
}
%
\def\mainmatter{ % Restarts page to 1, arabic numbers; freeze frontpagecount.
  \ifnvt@mainmatter%
    \ClassError{novelette}{Cannot use \string\mainmatter\space twice.^^J%
      \nvt@XN}{\nvt@RXN}\nvt@bad%
  \fi%
  \cleartorecto%
  \versohead{}
  \rectohead{}
  \global\nvt@frontmatterfalse%
  \global\nvt@mainmattertrue%
  \pagenumbering{arabic}%
  \setcounter{page}{1}%
}
%
\def\backmatter{%
  \cleartorecto%
  \versohead{}%
  \rectohead{}%
}
