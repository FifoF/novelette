%% PROCESS XMP
\def\nvt@process@xmp{
  \begingroup
    \makeatletter
    \input{novelette-xmppacket.sty}
    \global\let\nvt@xmpdata\nvt@xmppacket
    \begingroup
      \pdfcompresslevel=0
      \immediate\pdfobj stream attr {/Type /Metadata /Subtype /XML} {\nvt@xmpdata}
      \pdfcatalog{/Metadata \the\pdflastobj\space 0 R}
    \endgroup
  \endgroup
}
