%% VALIDATE IMAGE
\def\nvt@ValidateImageFile#1{%
  \nvt@oktrue%
    %%%%% Put validation routine here.
  \ifnvt@ok\else%
    \ifthenelse{\equal{\nvt@mode}{final}}{%
       \ClassError{novelette}{Image #1 did not pass validation.^^J%
         Must be processed to specific standards. See Novelette docs.^^J%
         \nvt@XN}{\nvt@RXN}\nvt@bad%
    }{%
      \ClassWarning{novelette}{Image #1 did not pass validation.^^J%
        This is a warning in draft mode, an error in final mode.}%
    }%
  \fi%
}
%%


%% IMAGE FLOAT
\def\nvt@imgfloat#1{%
  \def\fps@figure{#1}%
  \@float{figure}%
  \leavevmode%
  \ifthenelse{\equal{\nvt@imgpos}{c}}{\hfil}{}%
  \ifthenelse{\equal{\nvt@imgpos}{r}}{\hfill}{}%
  \ifthenelse{\equal{\nvt@imgpos}{o}}{\ifodd\c@page\hfill\fi}{}%
  \rule{0pt}{\nvt@intht}%
  \usebox\nvt@imgbox%
  \ifthenelse{\equal{\nvt@imgpos}{c}}{\hfil}{}%
  \ifthenelse{\equal{\nvt@imgpos}{l}}{\hfill}{}%
  \ifthenelse{\equal{\nvt@imgpos}{o}}{\ifodd\c@page\else\hfill\fi}{}%
  \par%
  \end@float%
}
